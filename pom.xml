<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.britesnow.samplesocial</groupId>
  <artifactId>sampleSocial</artifactId>
  <packaging>war</packaging>
  <version>0.1</version>
  <name>sampleSocial</name>
  <url>http://maven.apache.org</url>

  <!-- test -->
  <build>
    <finalName>sampleSocial</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
          <encoding>utf8</encoding>
        </configuration>
      </plugin>

      <!-- Copy war files to ../war -->
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.4</version>
        <executions>
          <execution>
            <id>compile-less-tmpl</id>
            <phase>compile</phase>
            <configuration>
              <tasks>
                <exec executable="java">
                  <arg line="-jar"/>
                  <arg line="/apps/jcruncherEx.jar"/>
                </exec>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.mortbay.jetty</groupId>
        <artifactId>jetty-maven-plugin</artifactId>
        <configuration>
          <webApp>
            <contextPath>/samplesocial</contextPath>
          </webApp>
        </configuration>
      </plugin>
    </plugins>

  </build>
  <dependencies>
    <!-- Provided Dependencies -->
